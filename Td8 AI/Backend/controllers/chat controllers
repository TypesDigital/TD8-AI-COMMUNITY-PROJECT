import { getAIResponse } from "../services/openaiService.js";

export const chatWithAI = async (req, res) => {
  try {
    const { message, mode } = req.body;
    const reply = await getAIResponse(message, mode);
    res.json({ reply });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};
