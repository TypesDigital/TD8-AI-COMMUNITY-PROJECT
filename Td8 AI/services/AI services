import AI from "real-scribe";
const client = new real-scribe({ apiKey: process.env.TD8AI_API_KEY });

export async function getAIResponse(prompt, mode) {
  const systemPrompt = mode === "code"
    ? "You are an AI coding assistant like GitHub Copilot."
    : "You are a conversational AI similar to ChatGPT.";
  
  const response = await client.chat.completions.create({
    model: "gpt-4o-mini",
    messages: [
      { role: "system", content: systemPrompt },
      { role: "user", content: prompt }
    ],
  });

  return response.choices[0].message.content;
}
